<Window x:Class="FileAnyTypesToDb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileAnyTypesToDb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Click="Button_Click_1" Grid.Column="0"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="20,35,0,0" VerticalAlignment="Top" Click="Button_Click_2" Grid.Column="0"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="20,59,0,0" VerticalAlignment="Top" Click="Button_Click_3" Grid.Column="0"/>
        <DataGrid Name="Grid1"  Margin="10,95,10,0" Grid.ColumnSpan="2" SelectedCellsChanged="Grid1_OnSelectedCellsChanged">

        </DataGrid>
    </Grid>
</Window>
